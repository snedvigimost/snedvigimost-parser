{
  "compilerOptions":
  {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "newLine": "LF",
    "types":
    [
      "node"
    ]
  },
  "include": [
    "src/*",
    "node_modules/@types/filesystem/index.d.ts"
  ],
  "exclude":
  [
    "node_modules"
  ]
}
