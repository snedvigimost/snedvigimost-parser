{
  "compilerOptions":
  {
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "newLine": "LF",
    "types":
    [
      "node"
    ]
  },
  "include":
  [
    "src/*"
  ],
  "exclude":
  [
    "node_modules"
  ]
}
